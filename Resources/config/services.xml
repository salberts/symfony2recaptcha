<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="salberts_recaptcha.form.type.class">Salberts\Bundle\Recaptcha2Bundle\Form\Type\RecaptchaType</parameter>
        <parameter key="salberts_recaptcha.validator.true.class">Salberts\Bundle\Recaptcha2Bundle\Validator\Constraints\IsTrueValidator</parameter>
    </parameters>

    <services>
        <service id="salberts_recaptcha.form.type" class="%salberts_recaptcha.form.type.class%">
            <tag name="form.type" alias="salberts_recaptcha" />
            <argument>%salberts_recaptcha.public_key%</argument>
            <argument>%salberts_recaptcha.enabled%</argument>
            <argument>%salberts_recaptcha.ajax%</argument>
            <argument>%salberts_recaptcha.locale_key%</argument>
        </service>

        <service id="salberts_recaptcha.validator.true" class="%salberts_recaptcha.validator.true.class%">
            <tag name="validator.constraint_validator" alias="salberts_recaptcha.true" />
            <argument>%salberts_recaptcha.enabled%</argument>
            <argument>%salberts_recaptcha.private_key%</argument>
            <argument type="service" id="request_stack" />
            <argument>%salberts_recaptcha.http_proxy%</argument>
        </service>
    </services>
</container>
